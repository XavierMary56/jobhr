# 数据库连接
DATABASE_URL=postgres://postgres:postgres@127.0.0.1:5432/tg_hr?sslmode=disable

# Redis 配置
REDIS_ADDR=127.0.0.1:6379

# JWT 密钥（生产环境必须修改为强密码）
JWT_SECRET=change-me

# 服务器监听地址
ADDR=:8080

# Cookie 安全标志（HTTPS 时应为 true，本地开发建议 false）
COOKIE_SECURE=false

# Telegram Bot Token
TELEGRAM_BOT_TOKEN=

# Telegram 开发模式（true/false）
# true 时跳过 Telegram 签名验证，仅用于本地测试
TELEGRAM_DEV_MODE=false

# Telegram Bot WebApp URL（前端应用地址）
# 本地开发示例：
BOT_WEBAPP_URL=http://localhost:3000
# 生产环境示例：
# BOT_WEBAPP_URL=https://your-platform-domain.com

# Telegram Bot Webhook 密钥（可选，用于验证来自 Telegram 的 webhook 消息）
# 在 BotFather 中设置 webhook 时需要配置
TELEGRAM_WEBHOOK_SECRET=

# 新建 HR 用户默认状态（active|pending）
HR_DEFAULT_STATUS=active

# 允许的 CORS 源（多个源用逗号分隔）
# 开发环境示例：
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001
# 生产环境示例：
# ALLOWED_ORIGINS=https://your-domain.com,https://www.your-domain.com
